               <addrLine>
                  <pb facs="MS-SCHNITZLER-B-0008-B-00002-000-00238"/>Herrn</addrLine>
               <addrLine>D<hi rend="latintype">r</hi> Arthur Schnitzler</addrLine>
               <addrLine>
                  <rs ref="#2318" type="place">Partenkirchen</rs>
               </addrLine>
               <addrLine>
