      <body>
         <div type="address">
            <address>
               <addrLine>
                  <pb facs="1901_AS_RBH_3_00003"/>Herrn <hi rend="latintype">Dr. Richard
                     Beer-Hofmann</hi>
               </addrLine>
               <addrLine>
                  <rs ref="#50" type="place">Wien</rs>
               </addrLine>
               <addrLine>
                  <hi rend="latintype">
