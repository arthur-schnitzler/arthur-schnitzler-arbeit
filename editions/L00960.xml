               <addrLine>
                  <pb facs="MS-SCHNITZLER-B-0008-B-00001-000-00304"/>Herrn</addrLine>
               <addrLine>D<hi rend="superscript">r</hi> Arthur Schnitzler</addrLine>
               <addrLine>
                  <rs ref="#pmb213" type="place">Ischl</rs>
               </addrLine>
               <addrLine>
                  <rs ref="#pmb414" type="place">Pension Petter</rs>
               </addrLine>
               <addrLine>
