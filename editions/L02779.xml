            <opener>
               <p rend="left">
                  <pb facs="HS.NZ85.1.3166_0069-1"/>
                  <hi rend="pre-print">
                     <hi rend="bold">
                        <rs type="org" ref="#pmb29442">Frankfurter Zeitung</rs>
