         <div type="address">
            <address>
               <addrLine>
                  <pb facs="1897_AS_RBH_4_00024"/>Herrn <hi rend="latintype">Dr. Richard
                     Beer-Hofmann</hi>
               </addrLine>
               <addrLine>
                  <rs ref="#pmb50" type="place">Wien</rs>
               </addrLine>
               <addrLine>
