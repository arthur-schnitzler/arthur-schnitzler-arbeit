            <address>
               <addrLine>
                  <pb facs="96.34.1_2_0013"/>Herrn Robert Adam</addrLine>
               <addrLine>
                  <rs ref="#pmb62" type="place">
                     <hi rend="spaced_out">Wien XII</hi>
                  </rs>.</addrLine>
               <addrLine>
                  <rs ref="#pmb1239" type="place">Meidlinger Hauptstraße 56</rs>.</addrLine>
