            <address>
               <addrLine>
                  <pb facs="96.34.1_2_0044"/>Herrn Dr. Robert Adam
                        Pollak,</addrLine>
               <addrLine>Bezirksrichter in <rs ref="#44400" type="place">Zistersdorf</rs>
               </addrLine>
               <addrLine>
                  <rs ref="#1003" type="place">N. Oe.</rs> –
                    </addrLine>
            </address>
