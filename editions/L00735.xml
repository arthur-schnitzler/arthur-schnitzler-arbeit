         <div type="address">
            <address>
               <addrLine>
                  <pb facs="1897_AS_RBH_3_00025"/>Herrn <hi rend="latintype">Dr. Rich.
                     Beer-Hofmann</hi>
               </addrLine>
               <addrLine>
                  <rs ref="#50" type="place">Wien</rs>
               </addrLine>
               <addrLine>
