            \toendnotes[C]{\medbreak\pagebreak[2]} \anhangTitel{L02715 }{Paul Goldmann an Arthur Schnitzler, 12. 9. 1893\nopagebreak}\datumImAnhang{\lohead{\textsc{september 1893}}}\Standort{DLA, A:Schnitzler, HS.NZ85.1.3163.}
