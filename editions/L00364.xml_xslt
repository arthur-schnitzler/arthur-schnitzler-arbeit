               \section[Richard Beer-Hofmann an Arthur Schnitzler, 23. 10. 1894]{L00391 Richard Beer-Hofmann an Arthur Schnitzler, 23. 10. 1894}\nopagebreak\mylabel{L00391v}\rehead{ }\lohead{\textsc{oktober 1894}}\normalsize\beginnumbering\briefempfaengerindex{, @\textsc{, }!zzz, @\emph{von  }!189410231@{23. 10. 1894}|(be}
            \toendnotes[C]{\medbreak\pagebreak[2]} \anhangTitel{L00391 }{Richard Beer-Hofmann an Arthur Schnitzler, 23. 10. 1894\nopagebreak}\datumImAnhang{\lohead{\textsc{oktober 1894}}}\Standort{CUL, Schnitzler, B 8.}
