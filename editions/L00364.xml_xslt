               \section[Richard Beer-Hofmann an Arthur Schnitzler, 21. 8. 1891]{L00035 Richard Beer-Hofmann an Arthur Schnitzler, 21. 8. 1891}\nopagebreak\mylabel{L00035v}\rehead{ }\lohead{\textsc{august 1891}}\normalsize\beginnumbering\briefempfaengerindex{, @\textsc{, }!zzz, @\emph{von  }!189108211@{21. 8. 1891}|(be}
            \toendnotes[C]{\medbreak\pagebreak[2]} \anhangTitel{L00035 }{Richard Beer-Hofmann an Arthur Schnitzler, 21. 8. 1891\nopagebreak}\datumImAnhang{\lohead{\textsc{august 1891}}}\Standort{CUL, Schnitzler, B 8.}
