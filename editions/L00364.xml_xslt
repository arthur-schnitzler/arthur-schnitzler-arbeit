               \section[Richard Beer-Hofmann an Arthur Schnitzler, {[}8. 11. 1894{]}]{L00399 Richard Beer-Hofmann an Arthur Schnitzler, {[}8. 11. 1894{]}}\nopagebreak\mylabel{L00399v}\rehead{ }\lohead{\textsc{november 1894}}\normalsize\beginnumbering\briefempfaengerindex{, @\textsc{, }!zzz, @\emph{von  }!189411082@{{[}8. 11. 1894{]}}|(be}
            \toendnotes[C]{\medbreak\pagebreak[2]} \anhangTitel{L00399 }{Richard Beer-Hofmann an Arthur Schnitzler, {[}8. 11. 1894{]}\nopagebreak}\datumImAnhang{\lohead{\textsc{november 1894}}}\Standort{CUL, Schnitzler, B 8.}
