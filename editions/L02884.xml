               <addrLine>
                  <foreign xml:lang="fra">
                     <hi rend="pre-print">M</hi>
                     <hi rend="latintype">onsieur le Dr. Arthur Schnitzler</hi>
                  </foreign>
               </addrLine>
               <addrLine>
                  <hi rend="latintype">
                     <rs type="place" ref="#pmb414">Pension Petter</rs>
                  </hi>
               </addrLine>
