            <opener>
               <p>
                  <seg rend="left">
                     <pb facs="MS-SCHNITZLER-B-00043-B-00001-000-00153"/>
                     <hi rend="pre-print">
                        <rs ref="#655" type="place">
                           <hi rend="capitals">Hotel Kaiserkrone</hi>
                        </rs>
                     </hi>
                  </seg>
                  <seg rend="right">
                     <hi rend="pre-print">
                        <rs ref="#213" type="place">Bad Ischl</rs>, am <c rendition="#dots" n="10"/>
