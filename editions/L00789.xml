         <div type="address">
            <address>
               <addrLine>
                  <pb facs="1898_AS_RBH_1_00037"/>Herrn <hi rend="latintype">Dr. Rich.
                     Beer-Hofmann</hi>
               </addrLine>
               <addrLine>
                  <rs ref="#50" type="place">Wien</rs>
               </addrLine>
               <addrLine>
                  <rs ref="#338" type="place">
