         <div type="address">
            <address>
               <addrLine>
                  <pb facs="1914_AS_RBH_1_00019"/>Hrn <hi rend="latintype">Dr Richard
                        Beerhofma<c rendition="#gemination-n"/>
                  </hi>
               </addrLine>
               <addrLine>
                  <hi rend="latintype">
                     <rs type="place" ref="#pmb34344">Weißenbach</rs>.</hi>
               </addrLine>
               <addrLine>
