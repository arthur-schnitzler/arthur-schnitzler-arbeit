            <address>
               <addrLine>
                  <pb facs="http://www.online.tma.ethz.ch/home/#/content/c30936a9db7848458d85823d78d6f1b7?tab=zugang"/>Herrn Thomas Mann</addrLine>
               <addrLine>
                  <rs ref="#45258" type="place">München</rs>
               </addrLine>
               <addrLine>
                  <rs ref="#1213" type="place">Puschingerstr. 1</rs>.</addrLine>
            </address>
