            <pb facs="DLA_75_05_00082 HS.NZ85.1.3175_0068"/>
            <paragraph-start/>
            <hi rend="pre-print">
               <rs type="place" ref="">Marienbad</rs>. <rs type="place" ref="">Kreuzbrunn Colonnade</rs>.</hi>
            <dateline>
               <opener>
                  <date>17. 8. 08</date>.</opener>
